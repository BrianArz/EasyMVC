@model List<Beer>

<h1>Beer</h1>

<p>
	<a asp-action="Create">Create</a>
</p>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Brand</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var beer in Model)
		{
			<tr>
				<td>@Html.DisplayFor(x => beer.Name)</td>
				<td>@Html.DisplayFor(x => beer.Brand.Name)</td>
			</tr>
		}
	</tbody>
</table>